<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gym.system.mapper.GymCourseMapper">
    
    <resultMap type="GymCourse" id="GymCourseResult">
        <result property="id"               column="id"                />
        <result property="name"            column="name"               />
        <result property="description"    column="description"       />
        <result property="durationMinutes" column="duration_minutes"   />
        <result property="createBy"        column="create_by"          />
        <result property="createTime"      column="create_time"        />
        <result property="updateBy"        column="update_by"         />
        <result property="updateTime"      column="update_time"        />
        <result property="remark"          column="remark"             />
        <result property="isDeleted"        column="is_deleted"         />
        <result property="deleteTime"      column="delete_time"        />
    </resultMap>

    <sql id="selectGymCourseVo">
        select id, name, description, duration_minutes, create_by, create_time, update_by, update_time, remark, is_deleted, delete_time from gym_course
    </sql>

    <select id="selectGymCourseList" parameterType="GymCourse" resultMap="GymCourseResult">
        <include refid="selectGymCourseVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="description != null  and description != ''"> and description like concat('%', #{description}, '%')</if>
            <if test="durationMinutes != null "> and duration_minutes = #{durationMinutes}</if>
            and is_deleted = 0
        </where>
        order by create_time desc
    </select>
    
    <select id="selectGymCourseById" parameterType="Long" resultMap="GymCourseResult">
        <include refid="selectGymCourseVo"/>
        where id = #{id} and is_deleted = 0
    </select>

    <select id="selectGymCourseByName" parameterType="String" resultMap="GymCourseResult">
        <include refid="selectGymCourseVo"/>
        where name = #{name} and is_deleted = 0
    </select>

    <select id="selectAllValidCourses" resultMap="GymCourseResult">
        <include refid="selectGymCourseVo"/>
        where is_deleted = 0
        order by name
    </select>
        
    <insert id="insertGymCourse" parameterType="GymCourse" useGeneratedKeys="true" keyProperty="id">
        insert into gym_course
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="description != null">description,</if>
            <if test="durationMinutes != null">duration_minutes,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="isDeleted != null">is_deleted,</if>
            <if test="deleteTime != null">delete_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="description != null">#{description},</if>
            <if test="durationMinutes != null">#{durationMinutes},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="isDeleted != null">#{isDeleted},</if>
            <if test="deleteTime != null">#{deleteTime},</if>
         </trim>
    </insert>

    <update id="updateGymCourse" parameterType="GymCourse">
        update gym_course
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="durationMinutes != null">duration_minutes = #{durationMinutes},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
            <if test="deleteTime != null">delete_time = #{deleteTime},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="deleteGymCourseById" parameterType="Long">
        update gym_course set is_deleted = 1, delete_time = now() where id = #{id}
    </update>

    <update id="deleteGymCourseByIds" parameterType="String">
        update gym_course set is_deleted = 1, delete_time = now() where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <select id="checkCourseNameUnique" parameterType="String" resultMap="GymCourseResult">
        <include refid="selectGymCourseVo"/>
        where name = #{name} and is_deleted = 0 limit 1
    </select>

</mapper>
