<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gym.system.mapper.GymAdminMapper">
    
    <resultMap type="GymAdmin" id="GymAdminResult">
        <result property="id"    column="id"    />
        <result property="username"    column="username"    />
        <result property="name"    column="name"    />
        <result property="phone"    column="phone"    />
        <result property="password"    column="password"    />
        <result property="role"    column="role"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectGymAdminVo">
        select id, username, name, phone, password, role, status, create_time from gym_admin
    </sql>

    <select id="selectGymAdminList" parameterType="GymAdmin" resultMap="GymAdminResult">
        <include refid="selectGymAdminVo"/>
        <where>  
            <if test="username != null  and username != ''"> and username like concat('%', #{username}, '%')</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="role != null  and role != ''"> and role = #{role}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectGymAdminById" parameterType="Long" resultMap="GymAdminResult">
        <include refid="selectGymAdminVo"/>
        where id = #{id}
    </select>

    <select id="selectGymAdminByUsername" parameterType="String" resultMap="GymAdminResult">
        <include refid="selectGymAdminVo"/>
        where username = #{username}
    </select>
        
    <insert id="insertGymAdmin" parameterType="GymAdmin" useGeneratedKeys="true" keyProperty="id">
        insert into gym_admin
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">username,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="phone != null and phone != ''">phone,</if>
            <if test="password != null and password != ''">password,</if>
            <if test="role != null and role != ''">role,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">#{username},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="phone != null and phone != ''">#{phone},</if>
            <if test="password != null and password != ''">#{password},</if>
            <if test="role != null and role != ''">#{role},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateGymAdmin" parameterType="GymAdmin">
        update gym_admin
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null and username != ''">username = #{username},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="password != null and password != ''">password = #{password},</if>
            <if test="role != null and role != ''">role = #{role},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGymAdminById" parameterType="Long">
        delete from gym_admin where id = #{id}
    </delete>

    <delete id="deleteGymAdminByIds" parameterType="String">
        delete from gym_admin where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
